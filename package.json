{
    "name": "@oat-sa/rollup-plugin-wildcard-external",
    "version": "1.0.0",
    "description": "Rollup plugin to define externals based on globs",
    "main": "index.js",
    "scripts": {
        "test": "mocha index.spec.js",
        "test:cov": "nyc -x *.spec.js mocha index.spec.js",
        "coverage": "nyc report",
        "coverage:clover": "nyc report --reporter=clover",
        "lint": "eslint index*.js",
        "lint:report": "eslint index*.js --output-file eslint_report.json --format json | true"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/oat-sa/rollup-plugin-wildcard-external.git"
    },
    "keywords": [
        "rollup",
        "plugin",
        "wildcard",
        "glob",
        "external"
    ],
    "publishConfig": {
        "access": "public"
    },
    "license": "GPL-2.0",
    "bugs": {
        "url": "https://github.com/oat-sa/rollup-plugin-wildcard-external/issues"
    },
    "homepage": "https://github.com/oat-sa/rollup-plugin-wildcard-external#readme",
    "dependencies": {
        "minimatch": "^9.0.0"
    },
    "devDependencies": {
        "eslint": "^8.39.0",
        "eslint-plugin-es": "^4.1.0",
        "eslint-plugin-jsdoc": "^40.1.1",
        "mocha": "^10.2.0",
        "nyc": "^15.1.0"
    }
}
